<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recieved_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/general_dimension"
    android:layout_marginEnd="40dp"
    android:gravity="start"
    tools:ignore="RtlHardcorded">

    <ImageView
        android:id="@+id/chat_dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/pic11"
        android:layout_gravity="bottom"
        tools:ignore="contentDescription"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/recieved"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/recieved_message"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:autoLink="all"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_gravity="bottom"/>


</LinearLayout>